<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercicio"
        android:id="@+id/tv_topo"
        android:textSize="20sp"


        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_aluno"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_topo"
        android:hint="Nome do(a) aluno(a)"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_media"
        android:inputType="numberDecimal"
        android:hint="Media final do(a) aluno(a)"
        app:layout_constraintTop_toBottomOf="@+id/et_aluno"
        android:layout_marginTop="2dp"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_verificar"
        app:layout_constraintTop_toBottomOf="@+id/et_media"
        android:text="Verificar"
        android:onClick="verificar"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_verificar"
        android:id="@+id/iv_img"

/>
</androidx.constraintlayout.widget.ConstraintLayout>